<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mozhimen.abilityktest.opencvk.OpenCVKContrastActivity">

        <com.mozhimen.camerak.camerax.CameraKXLayout
            android:id="@+id/opencvk_contrast_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.mozhimen.uicorek.viewk.scan.ViewKScanQR
            android:id="@+id/opencvk_contrast_qrscan"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:viewKScanQR_animTime="2000"
            app:viewKScanQR_borderColor="@android:color/white"
            app:viewKScanQR_borderLineWidth="2dp"
            app:viewKScanQR_isScanLineReverse="false"
            app:viewKScanQR_lineDrawable="@drawable/viewk_qr_scan_line"
            app:viewKScanQR_lineWidth="2dp" />

        <TextView
            android:id="@+id/opencvk_contrast_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="120dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/opencvk_contrast_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/blue_light" />

            <ImageView
                android:id="@+id/opencvk_contrast_img1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/blue_light" />

            <ImageView
                android:id="@+id/opencvk_contrast_img2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/blue_light" />

        </LinearLayout>

    </FrameLayout>
</layout>